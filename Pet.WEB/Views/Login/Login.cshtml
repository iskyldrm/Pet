@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <main class="form-signin w-100 m-auto">
       <section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-3">
        <img src="~/dist/img/CD.jpg"
          class="img-fluid" alt="cat&dog resmi">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form asp-controller="Login" asp-action="Login" method="post">
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Giriş yap</p>
            <button type="button" class="btn btn-link btn-floating mx-1">
              <i class="fab fa-facebook-f"></i>
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
              <i class="fab fa-twitter"></i>
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
              <i class="fab fa-linkedin-in"></i>
            </button>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-0 mb-0">Veya</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="Email" value="@Model.Email" type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Kayıtlı bir Email adresi gir" />
              <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email" value="@Model.Email" class="form-label" for="form3Example3">E-posto adresi</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input asp-for="Password" value="@Model.Password" type="password" id="form3Example4" class="form-control form-control-lg"
              placeholder="Şifre gir" />
              <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password" value="@Model.Password" class="form-label" for="form3Example4">Şifre</label>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input asp-for="RememberMe" class="form-check-input me-2" type="checkbox" value="@Model.RememberMe" id="form2Example3" />
              <label asp-for="RememberMe" class="form-check-label" for="form2Example3">
                Beni hatırla
              </label>
               <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <a href="#!" class="text-body">Şifremi unuttum</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-success btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Giriş yap</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Hesap oluştur <a href="#!"
                class="link">Kayıt ol</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
</section>
        </main>
    </body>
</html>

