@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    
    <div class="row">
        <div class="col-md-12">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Yeni Hesap Oluştur</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table class="table table-hover">
                    <tr>
                        <td>
                            <div class="form-floating">
                                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.UserName"  ></label>
                                <span  asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                                <label asp-for="Input.Name"  ></label>
                                <span  asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                                <label asp-for="Input.LastName"  ></label>
                                <span  asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <select asp-for="Input.Gender" class="form-control" autocomplete="new-password" aria-required="true">
                                    <option value="" selected disabled hidden>Seçiniz</option>
                                    <option value="true" >Kadın</option>
                                    <option value="false">Erkek</option>
                                </select>
                                <label asp-for="Input.Gender"></label>
                                <span asp-validation-for="Input.Gender" class="text-danger"></span>
                            </div>
                            <div class="form-floating md-form md-outline input-with-post-icon datepicker">
                                <input type="date" asp-for="Input.Age" class="form-control daterangepicker" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Age"></label>
                                <span asp-validation-for="Input.Age" class="text-danger"></span>
                            </div>
                        </td>
                        <td>
                            <div class="form-floating">
                                @*<select name="authorId" asp-items="Model.Options"></select>*@
                                <select asp-for="Input.CityId" class="form-control"  asp-items="Model.Sehirler">
                                    <option value="" selected disabled hidden>Seçiniz</option>
                                </select>
                                <label asp-for="Input.CityName"></label>
                                <span asp-validation-for="Input.CityName" class="text-danger"></span>
                            </div>

                             <div class="form-floating">
                                @*<select name="authorId" asp-items="Model.Options"></select>*@
                                <select asp-for="Input.DistrictId" class="form-control"  asp-items="Model.Ilceler">
                                    <option value="" selected disabled hidden>Seçiniz</option>
                                </select>
                                <label asp-for="Input.CityName"></label>
                                <span asp-validation-for="Input.CityName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email"  ></label>
                                <span  asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </td>
                        
                    </tr>
                </table>
                
                <div class="col-md-4">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">

        </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

