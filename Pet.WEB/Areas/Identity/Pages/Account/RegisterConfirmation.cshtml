@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "E-posta Onanylanması gerekiyor";
}
<div class="container mt-5">
<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        //mail olayı düzeltilirse displayconfirim accoun link registerconfirimmodelde false yapılacak
<p>
    Hesabınızı onaylamak için lütfen e-postanızı kontrol edin: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Hesabınızı onaylamak için burayı tıklayın</a>
</p>
    }
    else
    {
       
<p>
        Hesabınızı onaylamak için lütfen e-postanızı kontrol edin.
</p>
    }
}
</div>

